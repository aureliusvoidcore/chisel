# direnv configuration for Chisel sandbox
# Automatically sets up environment when entering this directory
# Install direnv: https://direnv.net/

# Add local SBT to PATH
export PATH="${PWD}/tools/sbt/bin:${PATH}"

# SBT options for better performance
export SBT_OPTS="-Xmx2G -Xss2M"

# Set project root
export PROJECT_ROOT="${PWD}"

# Generated output directory
export GENERATED_DIR="${PWD}/generated"

echo "Chisel sandbox environment loaded"
echo "SBT: $(which sbt 2>/dev/null || echo 'tools/sbt/bin/sbt')"
